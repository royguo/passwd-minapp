.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.content{ 
 display: flex; 
 justify-content: space-around; 
 align-items: center; 
 margin-top: 200rpx; 
} 

.iptbox{ 
 width: 80rpx; 
 height: 80rpx; 
 border: 1rpx solid #ddd; 
 border-radius: 0rpx; 
 display: flex; 
 justify-content: center; 
 align-items: center; 
 text-align: center;
 margin: 10rpx;
}

.ipt{ 
 width: 0; 
 height: 0; 
}
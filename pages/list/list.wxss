.ctn {
  background-color: #f8f8f8;
  padding: 50rpx 0 50rpx 0;
}

.item {
 margin: 0 40rpx;
 font-size: 12pt;
 color: #353535;
}

.item .line {
  padding: 10rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  height: 60rpx;
}

.item .line .left {
  float: left;
  width: 150rpx;
}

.item .line .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 12pt;
  width: 600rpx;
  padding-left: 5rpx;
}

.item .line .right input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.47058824em;
  line-height: 1.47058824;
}

